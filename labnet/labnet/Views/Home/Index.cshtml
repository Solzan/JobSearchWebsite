    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>
    <script>
        var uri = 'api/Job';


        var currentPage = 1;
        $(document).ready(function () {
           // loadAllData();
            fetchData(1);
        });
        function fetchData(pageNo) {
            var $loading = $('<div/>').addClass('loading').html('Please wait...');
            $loading.attr('id', 'load');
            $('#updatePanel').prepend($loading);
            $.ajax({
                url: '/api/Job',
                type: 'GET',
                data: { pageNo: pageNo },
                dataType: 'json',
                success: function (data) {
                    c = 0;
                    $("#mytable").empty();
                    var $head = $('<thead>').html('<tr><th scope = "col" >Job Title</th ><th scope="col">Company</th><th scope="col">Location</th><th scope="col">StartDate</th><th style="width: 50px"></th></tr >');
                    var $bd = $('<tbody>').html('');
                    $bd.attr('id','jobs')
                    $.each(data, function (i, emp) {
                        
                        $bd.append(formatItem(emp));
                        c += 1;
                    });
                    $('#modelCount').empty();
                    $("#modelCount").append(c);
                    $("#mytable").append($head);
                    $("#mytable").append($bd);
                    
                },
                error: function () {
                    alert('Error! Please try again.');
                }
            }).done(function () {
                $("#load").empty();
               
            });
        }



