    <script>
        var uri = 'api/Job';

        $(document).ready(function () {
            // Send an AJAX request
            loadAllData();
            //$(document).on("click", "#jobs tr", function () {
            //    //some think
            //    alert("You clicked my <td>!" + $(this).html() +
