            //$(".tbody td").click(function () {
            //    alert("You clicked my <td>!" + $(this).html() +
            //        "My TR is:" + $(this).parent("tr").html());
            //    //get <td> element values here!!??
            //});
        })

        function loadAllData() {
            $.getJSON(uri)
                .done(function (data) {
                    // On success, 'data' contains a list of products.
                    $.each(data, function (key, item) {
                        $("#jobs").append(formatItem(item));
                    });
                });
            return;
        }


        function formatItem(item) {

            var d = new Date(item.startDate);
            return "<tr><td><a href=\"/JobOffers/Details?id=" + item.id + "\">" + item.jobTitle + "</a></td><td>" + item.company + "</td><td>" + item.location + "</td><td>" + d.getDate() + "/" + d.getMonth() + "/" + d.getFullYear() + "</td></tr>"
        }

        function find() {
            $('#jobs').empty()

            var id = $('#prodId').val();
            if (id === "") {
                loadAllData();
            }
            $.getJSON(uri + '/' + id)
                .done(function (data) {
                    var d = new Date(data.startDate);
                    //$('#jobs').text(formatItem(data));
                    $("#jobs").append(formatItem(data));
                })
                .fail(function (jqXHR, textStatus, err) {
                    $('#jobs').text('Error: ' + err);
                });
        }
    </script>

